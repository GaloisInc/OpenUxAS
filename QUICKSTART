# OpenUxAS build instructions; branch rivetss; platform Fedora 29 Base

sudo dnf -y install git-core
mkdir -p RIVETSS
cd RIVETSS
git clone https://github.com/GaloisInc/OpenUxAS
cd OpenUxAS
bash ./install_prerequisites.sh

# Now the disaggregated HelloWorld demo may be run
. ./path.sh
cd ./examples/01_HelloWorld
./runUxAS_HelloWorld-dual.sh
