#! /usr/bin/env xs

fmt = pdf
view = zathura
pgm = $0
here = `` \n {cd `{dirname $pgm}; pwd}
name = `{basename $pgm}
$here^/tools/cinclude2dot \
	--groups \
	--merge module \
	--include Includes/ Communications/ DPSS/ LMCP/ \
		Plans/ Services/ Tasks/ \
	--quotetypes quote \
	>[2]/dev/null >$here^/out/^$name^.dot
neato -T^$fmt $here^/out/^$name^.dot >$here^/out/^$name^.^$fmt
$view $here^/out/^$name^.^$fmt
